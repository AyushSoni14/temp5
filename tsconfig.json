{
  "compilerOptions": {
    "target": "es5", // Targets ES5 for compatibility
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Includes the necessary libraries
    "allowJs": true, // Allows JavaScript files to be compiled
    "skipLibCheck": true, // Skips type checking of declaration files for faster builds
    "strict": true, // Enables all strict type-checking options
    "noEmit": true, // Does not output files, useful when using Next.js
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Use ESNext modules
    "moduleResolution": "node", // Resolves modules using Node.js resolution strategy
    "resolveJsonModule": true, // Allows importing JSON files
    "isolatedModules": true, // Ensures that all files are treated as isolated modules
    "jsx": "preserve", // Keeps JSX as-is for Next.js to handle
    "incremental": true, // Enables incremental compilation for faster builds
    "paths": {
      "@/*": [
        "./*"
      ] // Alias for absolute imports
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next" // Exclude the Next.js build directory
  ]
}
